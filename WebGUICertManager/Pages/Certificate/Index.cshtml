@page
@model WebGUICertManager.Pages.Certificate.IndexModel
@{
    ViewData["Title"] = "Certificates";
}

<h1>Certificates List</h1>
<hr />
<table class="table table-responsive table-striped table-hover align-middle">
    <form asp-page="./Index" method="get">
        <div class="form-actions no-color">
            <tbody>
                <tr>
                    <td>
                        <p>
                            Certificate status:
                            <select id="DispositionOption" asp-for="@Model.DispositionOption" asp-items="Model.DispositionOptions" value="@Model.CurrentDisposition" class="form-control" size="3">Select</select>
                        </p>

                    </td>
                </tr>
                <tr>
                    <td>
                        <p>
                            Search String:
                            <input type="text" name="SearchString" value="@Model.CurrentStringFilter" />
                        </p>
                    </td>
                    <td>
                        <p>
                            Search ID:
                            <input type="text" name="SearchID" value="@Model.CurrentIdFilter" />
                        </p>
                    </td>
                    <td>
                        <p>
                            max Expirationdate:
                            <input type="date" name="SearchDate" value="@Model.CurrentDateFilter" format="yyyy-MM-dd" />
                        </p>
                    </td>
                </tr>
                <tr>
                    <td>
                        <p>
                            <input type="submit" value="Search" class="btn btn-primary" />
                        </p>
                    </td>
                    <td>
                        <p>
                            <a asp-page="./Index">Back to full List</a>
                        </p>
                    </td>
                </tr>
            </tbody>
        </div>
    </form>
</table>

<table class="table table-responsive table-striped table-hover align-middle">
    <thead>
        <tr class="text-center">
            <th>@Html.DisplayNameFor(model => model.Entries[0].CAConfig)</th>
            <th>
                <a asp-page="./Index" asp-route-sortOrder="@Model.IdSort"
                   asp-route-currentIdFilter="@Model.CurrentIdFilter"
                   asp-route-currentStringFilter="@Model.CurrentStringFilter"
                   asp-route-currentDateFilter="@Model.CurrentDateFilter"
                   asp-route-DispositionOption="@Model.CurrentDisposition">
                   @Html.DisplayNameFor(model => model.Entries[0].RequestId)
                </a>
            </th>
            <th>
                <a asp-page="./Index" asp-route-sortOrder="@Model.SubjectSort"
                   asp-route-currentIdFilter="@Model.CurrentIdFilter"
                   asp-route-currentStringFilter="@Model.CurrentStringFilter"
                   asp-route-currentDateFilter="@Model.CurrentDateFilter"
                   asp-route-DispositionOption="@Model.CurrentDisposition">
                    @Html.DisplayNameFor(model => model.Entries[0].RequestCommonName)
                </a>
            </th>
            <th>RequesterInformation</th>
            <th>SubjectAlternateNames</th>
            <th>
                <a asp-page="./Index" asp-route-sortOrder="@Model.ExpirationDateSort"
                   asp-route-currentIdFilter="@Model.CurrentIdFilter"
                   asp-route-currentStringFilter="@Model.CurrentStringFilter"
                   asp-route-currentDateFilter="@Model.CurrentDateFilter"
                   asp-route-DispositionOption="@Model.CurrentDisposition">
                    @Html.DisplayNameFor(model => model.Entries[0].CertificateExpirationDate)
                </a>
            </th>
            <th>
                <a asp-page="./Index" asp-route-sortOrder="@Model.OwnerSort"
                   asp-route-currentIdFilter="@Model.CurrentIdFilter"
                   asp-route-currentStringFilter="@Model.CurrentStringFilter"
                   asp-route-currentDateFilter="@Model.CurrentDateFilter"
                   asp-route-DispositionOption="@Model.CurrentDisposition">
                    @Html.DisplayNameFor(model => model.Entries[0].Owner)
                </a>
            </th>
            <th>@Html.DisplayNameFor(model => model.Entries[0].Notes)</th>
            <th>Actions</th>
        </tr>

    </thead>
    <tbody>
        @foreach (var entry in Model.Entries)
        {
            <tr class="text-center">
                <td>@Html.DisplayFor(model => entry.CAConfig)</td>
                <td>@Html.DisplayFor(model => entry.RequestId)</td>
                <td>@Html.DisplayFor(model => entry.RequestCommonName)</td>
                <td>
                    @if (entry.RequestCommonName != "" && entry.RequestCommonName != null)
                    {
                        @Html.DisplayName("CN = ") @Html.DisplayFor(model => entry.RequestCommonName) 
                        <br /> 
                    }
                    @if (entry.RequestCountryRegion != "" && entry.RequestCountryRegion != null)
                    {
                        @Html.DisplayName("C = ") @Html.DisplayFor(model => entry.RequestCountryRegion)
                        <br />
                    }
                    @if (entry.RequestCity != "" && entry.RequestCity != null)
                    {
                        @Html.DisplayName("L = ") @Html.DisplayFor(model => entry.RequestCity)
                        <br />
                    }
                    @if (entry.RequestOrganization != "" && entry.RequestOrganization != null)
                    {
                        @Html.DisplayName("O = ") @Html.DisplayFor(model => entry.RequestOrganization)
                        <br />
                    }
                    @if (entry.RequestOrganizationUnit != "" && entry.RequestOrganizationUnit != null)
                    {
                        @Html.DisplayName("OU = ") @Html.DisplayFor(model => entry.RequestOrganizationUnit)
                        <br />
                    }
                    @if (entry.RequestEmailAddress != "" && entry.RequestEmailAddress != null)
                    {
                        @Html.DisplayName("E = ") @Html.DisplayFor(model => entry.RequestEmailAddress)
                        <br />
                    }
                </td>
                <td>
                @foreach (var san in entry.SANs)
                {
                        @san.SubjectAlternativeName.Split('=')[1]
                        <br />
                }
                </td>
                <td>@Html.DisplayFor(model => entry.CertificateExpirationDate)</td>
                <td>@Html.DisplayFor(model => entry.Owner)</td>
                <td>@Html.DisplayFor(model => entry.Notes)</td>
                <td>
                    <a asp-page="Edit" asp-route-id="@entry.RequestId" asp-route-config="@entry.CAConfig" class="btn btn-primary">Edit</a>
                </td>
                <td>
                    <a asp-page="Revoke" asp-route-id="@entry.RequestId" asp-route-config="@entry.CAConfig" asp-route-serialnumber="@entry.SerialNumber" class="btn btn-primary">Revoke</a>
                </td>
            </tr>

        }
        <tr><td>@Model.Entries.PageIndex of @Model.Entries.TotalPages</td></tr>
    </tbody>

</table>

@{
    var prevDisabled = !Model.Entries.HasPreviousPage ? "disabled" : "";
    var nextDisabled = !Model.Entries.HasNextPage ? "disabled" : "";
}

<a asp-page="./Index"
   asp-route-sortOrder="@Model.CurrentSort"
   asp-route-pageIndex="@(Model.Entries.PageIndex - 1)"
   asp-route-currentIdFilter="@Model.CurrentIdFilter"
   asp-route-currentStringFilter="@Model.CurrentStringFilter"
   asp-route-currentDateFilter="@Model.CurrentDateFilter"
   asp-route-DispositionOption="@Model.CurrentDisposition"
   class="btn btn-primary @prevDisabled">
    Previous
</a>
<a asp-page="./Index"
   asp-route-sortOrder="@Model.CurrentSort"
   asp-route-pageIndex="@(Model.Entries.PageIndex + 1)"
   asp-route-currentIdFilter="@Model.CurrentIdFilter"
   asp-route-currentStringFilter="@Model.CurrentStringFilter"
   asp-route-currentDateFilter="@Model.CurrentDateFilter"
   asp-route-DispositionOption="@Model.CurrentDisposition"
   class="btn btn-primary @nextDisabled">
    Next
</a>

<form method="post">
    <label for="SelectedOptions">Select multiple options:</label>
    <select id="SelectedOptions" asp-for="SelectedOption" asp-items="Model.AvailableOptions" multiple value="0" class="form-control" size="4">Select</select>
    <input type="text" id="SelectedOptionsText" class="form-control" placeholder="" hidden/>
    <input type="text" id="SelectedExportFilter" class="form-control" placeholder="" hidden/>
    <a asp-page="./Index"
       id="ExportBtn"
       asp-route-sortOrder="@Model.CurrentSort"
       asp-route-pageIndex="@Model.Entries.PageIndex"
       asp-route-currentIdFilter="@Model.CurrentIdFilter"
       asp-route-currentStringFilter="@Model.CurrentStringFilter"
       asp-route-currentDateFilter="@Model.CurrentDateFilter"
       asp-route-DispositionOption="@Model.CurrentDisposition"
       asp-route-Export="true"
       class="btn btn-primary">
        Export
    </a>
</form>


@section Scripts {
    <script>
        // When dropdown changes, copy selected text to textbox
        document.getElementById("SelectedOptionsText").value = ExportBtn.href
        document.getElementById("SelectedOptions").addEventListener("change", function () {
            const dropdown = this;
            const selectedValues = Array.from(dropdown.selectedOptions).map(option => option.value);

            if(selectedValues.join(",").length > 2)
            {
                var ExportBtn = document.getElementById("ExportBtn")
                
                document.getElementById("SelectedExportFilter").value = "ExportFilter=" + selectedValues.join(",")
                ExportBtn.href = document.getElementById("SelectedOptionsText").value + "&ExportFilter=" + selectedValues.join(",")
            }
        });
    </script>
}

